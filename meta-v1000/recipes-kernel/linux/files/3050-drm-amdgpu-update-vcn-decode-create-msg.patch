-	msg[15] = cpu_to_le32(0x00000000);
-	msg[16] = cpu_to_le32(0x01b37000);
-	msg[17] = cpu_to_le32(0x00000000);
-	msg[18] = cpu_to_le32(0x00000000);
-	for (i = 19; i < 1024; ++i)
+	msg[12] = cpu_to_le32(0x00000780);
+	msg[13] = cpu_to_le32(0x00000440);
+	for (i = 14; i < 1024; ++i)
 		msg[i] = cpu_to_le32(0x0);
 
 	amdgpu_bo_kunmap(bo);
